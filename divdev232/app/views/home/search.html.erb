<h1>Search Results</h1>

<%= form_tag :action => 'search' do %>
	<p>What product are you looking for?
	<%= text_field_tag 'searchinput', @searchinput %> </p>
	<hr/>
	<% if @results>0 %>
		<% if @productlist.length > 0 %>
			<p> Here are the search results:</p>
			<p>
			<table border="1" align="center" width=85%>
			<tr>
				<th>Product Name</th>
				<th>Image</th>
				<th>Description</th>
			</tr>
			<% @productlist.each do |p| %>
				<tr>
				<td><%= link_to p.productname, product_path(p.id) %></td>
				<td><%= image_tag p.productimg, size: "70x70" %></td>
				<td><%= p.description %></td>
				</tr>
			<% end %>
		</table><br>

		<% else%>
			<p>There were no products with your search criteria. Try again!</p>
		<% end %>
	<% end %>

	<%= submit_tag 'Search' %>
<% end %>
